<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MeyveDetailActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgKapak"
                android:layout_width="match_parent"
                android:layout_height="@dimen/meyve_detail_imgKapak_layout_height"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/banner_fruit" />

            <TextView
                android:id="@+id/txtBaslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/meyve_detail_txtBaslik_padding"
                android:text="@string/meyvedetail_baslik_text"
                android:textColor="@color/baslik_color_darkgreen"
                android:textSize="@dimen/meyve_detail_txtBaslik_textsize"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtDetay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/meyve_detail_txtDetay_padding"
                android:text="@string/meyvedetail_detay_text"
                android:textSize="@dimen/meyve_detail_txtDetay_textsize" />

            <TextView
                android:id="@+id/txtBaslik2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/meyve_detail_txtBaslik2_padding"
                android:text="@string/meyvedetail_baslik2_text"
                android:textColor="@color/baslik2_color_lightgreen"
                android:textSize="@dimen/meyve_detail_txtBaslik2_textsize"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtDetay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/meyve_detail_txtDetay2_padding"
                android:text="@string/meyvedetail_detay2_text"
                android:textSize="@dimen/meyve_detail_txtDetay2_textsize" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>